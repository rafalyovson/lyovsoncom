{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["ultracite"],
  "files": {
    "includes": [
      "**",
      "!src/components/ui",
      "!src/app/(payload)",
      "!src/payload-types.ts",
      "!src/app/(payload)/admin/importMap.js"
    ],
    "experimentalScannerIgnores": [
      "src/utilities/test-*.ts",
      "src/utilities/check-*.ts",
      "src/utilities/migrations/run-*.ts",
      "src/utilities/migrate-*.ts"
    ]
  },
  "linter": {
    "rules": {
      "style": {
        "noMagicNumbers": "warn",
        "useFilenamingConvention": "off",
        "noNonNullAssertion": "warn",
        "noNestedTernary": "warn",
        "noNamespace": "warn"
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "noArrayIndexKey": "warn",
        "noBitwiseOperators": "off",
        "noEmptyBlockStatements": "warn",
        "noUnknownAtRules": "off",
        "useAwait": "warn",
        "noEvolvingTypes": "warn",
        "noImplicitAnyLet": "warn",
        "noDocumentCookie": "warn"
      },
      "nursery": {
        "noShadow": "warn",
        "noUnnecessaryConditions": "warn",
        "useAnchorHref": "warn",
        "useConsistentTypeDefinitions": "warn"
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": "warn",
        "noCommaOperator": "off",
        "noForEach": "warn",
        "noBannedTypes": "warn"
      },
      "performance": {
        "noBarrelFile": "off",
        "useTopLevelRegex": "warn",
        "noNamespaceImport": "warn"
      },
      "a11y": {
        "noSvgWithoutTitle": "warn",
        "useValidAnchor": "warn",
        "useButtonType": "warn",
        "useAriaPropsSupportedByRole": "warn",
        "useSemanticElements": "warn",
        "noNoninteractiveElementInteractions": "warn",
        "useKeyWithClickEvents": "warn",
        "noStaticElementInteractions": "warn",
        "useFocusableInteractive": "warn",
        "useAriaPropsForRole": "warn"
      },
      "security": {
        "noDangerouslySetInnerHtml": "warn"
      },
      "correctness": {
        "noUnusedVariables": "warn",
        "useExhaustiveDependencies": "warn",
        "noUnusedFunctionParameters": "warn",
        "noNestedComponentDefinitions": "warn"
      }
    }
  }
}
